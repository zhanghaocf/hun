  <image wx:if="{{girlname}}" src="/images/xn.jpg" mode="widthFix" class="xl3"></image>
  <view class="boyname3">: {{boyname||girlname}}</view>
</view>
<image src="/images/zs3.jpg" mode="widthFix" class="zsimg3"></image>
<view class="headimgwrap">
  <image src="/images/kuang.jpg" mode="widthFix" class="kuang3"></image>
  <image src="{{img}}" mode="aspectFill" class="boyimg3"></image>
</view>
<view class="ofoot">
  <image src="/images/ground.jpg" class="oground" mode="widthFix"></image>
  <image mode="widthFix" src="/images/xrz3.jpg" class="xrz3"></image>
  <image mode="widthFix" src="/images/g3.jpg" class="g3"></image>
  <image mode="widthFix" src="/images/rr3.jpg" class="rr3"></image>
  <image mode="widthFix" src="/images/lh3.jpg" class="lh3"></image>
  <image mode="widthFix" src="/images/xrq3.jpg" class="xrq3"></image>
