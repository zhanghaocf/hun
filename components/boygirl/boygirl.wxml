<view class="{{classname}} {{activeClass}}">
<image class="zs3" mode="widthFix" src="/images/hh.jpg"></image>
<image src="/images/l3.jpg" mode="widthFix" class="l3"></image>
<image src="/images/r3.jpg" mode="widthFix" class="r3"></image>
<view class="speak3">
  <image src="/images/laguage3.jpg" mode="widthFix" class="laguage3"></image>
  <image src="/images/im3.jpg" mode="widthFix" class="im3"></image>
  <image wx:if="{{boyname}}" src="/images/groom.jpg" mode="widthFix" class="groom3"></image>
  <image wx:if="{{girlname}}" src="/images/bride.jpg" mode="widthFix" class="bride3"></image>
</view>
<image src="/images/diao3.jpg" mode="widthFix" class="diao3"></image>
<image wx:if="{{boyname}}" class="boy3" mode="widthFix" src="/images/boy3.jpg"></image>
<image wx:if="{{girlname}}" class="girl3" mode="widthFix" src="/images/girl4.jpg"></image>
<image src="/images/xin.jpg" mode="widthFix" class="xin3"></image>
<view class="namewrap">
  <image src="/images/namebg.jpg" mode="widthFix" class="nbg3"></image>
